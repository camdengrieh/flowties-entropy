{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types", "./app/types"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain-types",
    ".next/types/**/*.ts",
    "./app/**/*.ts",
    "./app/**/*.tsx"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
